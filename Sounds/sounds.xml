<?xml version="1.0"?>

<PropertyList>

<fx>
<!--**** Internal sounds ****-->

<engine>  <!--engine-start-inside-->
		<name>engine-start-inside</name>
		<mode>once</mode>
		<path>Aircraft/SU-27SK/Sounds/su-startup.wav</path>
		<condition>
				<and>
					<property>sim/current-view/internal</property>
					<property>controls/engines/engine/starter</property>
			</and>
		</condition>
		<pitch>
			<property>engines/engine[0]/n1</property>
			<factor> 0.1 </factor>
			<min> 0.0 </min>
			<max> 0.9 </max>
		</pitch>
		<volume>
			<property>canopy/position-norm</property>
        <factor>1.0 </factor>
        <min> 0.2 </min>
        <max> 0.9 </max>
		</volume>
		<position>
				<x>1</x>
				<y>0.0</y>
				<z>0.6</z>
		</position>
		<reference-dist>1.0</reference-dist>
		<max-dist>15.0</max-dist>
</engine>

<engine>  <!--**engine running-inside**-->
		<name>engine running-inside</name>
		<mode>looped</mode>
		<path>Aircraft/SU-27SK/Sounds/running.wav</path>
		<condition>
		<and>
				<property>sim/current-view/internal</property>
				<property>engines/engine/running</property>
		</and>
		</condition>
		<!--TODO : fix the sound pitch (it should raise with n1 value)-->
		<pitch>
			<property>engines/engine[0]/n1</property>
			<factor> 0.1 </factor>
			<min> 0.1 </min>
			<max> 1.0 </max>
		</pitch>
		<volume>
			<property>canopy/position-norm</property>
        <factor>1.0 </factor>
        <min> 0.2 </min>
        <max> 0.9 </max>
		</volume>
		<position>
				<x>2</x>
				<y>0.0</y>
				<z>0.2</z>
		</position>
		<reference-dist>1.0</reference-dist>
		<max-dist>15.0</max-dist>
</engine>

<AfterBurner>  <!--AfterBurner-inside-->
		<name>AfterBurner-inside</name>
		<mode>looped</mode>
		<path>Aircraft/SU-27SK/Sounds/reheat.wav</path>
		<condition>
				<and>
						<property>sim/current-view/internal</property>
						<property>controls/engines/engine/augmentation</property>
				</and>
		</condition>
		<pitch>
			<property>engines/engine[0]/n1</property>
			<factor> 1.0 </factor>
			<min> 0.0 </min>
			<max> 0.9 </max>
		</pitch>
		<volume>
			<property>canopy/position-norm</property>
        <factor>1.0 </factor>
        <min> 0.2 </min>
        <max> 0.9 </max>
		</volume>
		<position>
				<x>1</x>
				<y>0.0</y>
				<z>0.6</z>
		</position>
<!--
		<reference-dist>1.0</reference-dist>
		<max-dist>15.0</max-dist>
-->
</AfterBurner>


<!--**** Cockpit Warrnings sounds ****-->

<stall>	  <!--**Rita Stall warning**-->
		<name>stall</name>
		<mode>once</mode>
		<path>Aircraft/SU-27SK/Sounds/RitaHighAoA.wav</path>
		<condition>
			<greater-than>
		  <property>orientation/alpha-deg</property>
		  <value>25</value>
		  </greater-than>
				<not>
						<property>/gear/gear[0]/wow</property>
						<property>/gear/gear[1]/wow</property>
						<property>/gear/gear[2]/wow</property>
						<property>/gear/gear[0]/position-norm</property>
				</not>
		</condition>
	 <volume>
    <property>sim/sound/avionics/volume</property>
    <factor>1</factor>
		<min>0</min>
		<max>1</max>
   </volume>
		<position>
				<x>6</x>
				<y>0</y>
				<z>1</z>
		</position>
		<reference-dist>1.0</reference-dist>
		<max-dist>8.0</max-dist>
</stall>	
	
	
	
	<!--**** External sounds ****-->
	
	<engine>  <!--engine-start-outside-->
		<name>engine-start-outside</name>
		<mode>once</mode>
		<path>Aircraft/SU-27SK/Sounds/su-startup.wav</path>
		<condition>
				<and>
					<equals>
					<property>sim/current-view/internal</property>
					<value>false</value>
					</equals>
					<equals>
					<property>controls/engines/engine/starter</property>
					<value>true</value>
					</equals>
				</and>
		</condition>
		<pitch>
			<property>engines/engine[0]/n1</property>
			<factor> 0.3 </factor>
			<min> 0.0 </min>
			<max> 0.9 </max>
		</pitch>
      <volume>
        <property>engines/engine[0]/rpm</property>
        <factor> 0.99 </factor>
        <min> 0.6 </min>
        <max> 0.99 </max>
      </volume>
		<position>
				<x>1</x>
				<y>0.0</y>
				<z>0.6</z>
		</position>
		
<!--
		<reference-dist>1.0</reference-dist>
		<max-dist>15.0</max-dist>
-->
</engine>


<engine>  <!--**engine running-outside**-->
		<name>engine running-outside</name>
		<mode>looped</mode>
		<path>Aircraft/SU-27SK/Sounds/running.wav</path>
		<condition>
		<and>
				<not>
				<property>sim/current-view/internal</property>
				</not>
				<property>engines/engine/running</property>
		</and>
		</condition>
		<!--TODO : fix the sound pitch (Should raise with n1 value)-->
		<pitch>
			<property>engines/engine[0]/n1</property>
			<factor> 0.1 </factor>
			<min> 0.1 </min>
			<max> 1.0 </max>
		</pitch>
		<volume>
        <factor>1.0 </factor>
		</volume>
		<position>
				<x>2</x>
				<y>0.0</y>
				<z>0.2</z>
		</position>
<!--
		<reference-dist>1.0</reference-dist>
	
		<max-dist>15.0</max-dist>
-->	
</engine>


<AfterBurner>  <!--AfterBurner-outside-->
		<name>AfterBurner-outside</name>
		<mode>looped</mode>
		<path>Aircraft/SU-27SK/Sounds/reheat.wav</path>
		<condition>
				<and>
				<not>
				<property>sim/current-view/internal</property>
				</not>
				<property>controls/engines/engine/augmentation</property>
				</and>
		</condition>
		<pitch>
			<property>engines/engine[0]/n1</property>
			<factor> 1.0 </factor>
			<min> 0.0 </min>
			<max> 0.9 </max>
		</pitch>
		<volume>
        <factor>1.0 </factor>
		</volume>
		<position>
				<x>1</x>
				<y>0.0</y>
				<z>0.6</z>
		</position>
<!--
		<reference-dist>1.0</reference-dist>
		<max-dist>15.0</max-dist>
-->
</AfterBurner>

<!--ALL VIEWS SOUNDS-->

<gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Sounds/gear.wav</path>
      <property>/gear/gear[0]/position-norm</property>
      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>-0.001</factor>
      </pitch>
	     <volume>
    <property>sim/sound/avionics/volume</property>
    <factor>1</factor>
    <offset>0</offset>
	<min>0</min>
	<max>1</max>
   </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>

    <gear>
     <name>gear-lock</name>
     <path>Sounds/gear-lck.wav</path>
     <condition>
      <equals>
       <property>/gear/gear[0]/position-norm</property>
       <value>0</value>
      </equals>
     </condition>
	    <volume>
	    <property>sim/sound/avionics/volume</property>
	    <factor>1</factor>
	    <offset>0</offset>
		<min>0</min>
		<max>1</max>
	   </volume>
<!--
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
-->
    </gear>
    
<Tyres-touchdown>
		<name>Tyres-touchdown</name>
		<path>Sounds/tyres-touchdown.wav</path>
		<condition>
				<property>gear/gear[1]/wow</property>
		</condition>
<!--
		<reference-dist>150</reference-dist>
		<max-dist>500</max-dist>
-->
		<position>
				<x>1.2</x>
				<y>-1.0</y>
				<z>-0.6</z>
		</position>
		<volume>
				<property>velocities/speed-down-fps</property>
				<factor>0.05</factor>
		</volume>
		<pitch>
				<property>velocities/airspeed-kt</property>
				<factor>0.0055</factor>
		</pitch>
</Tyres-touchdown>

<Flaps>
     <path>Sounds/flaps.wav</path>
     <condition>
      <greater-than>
       <property>fdm/jsbsim/fcs/flap-pos-norm</property>
       <value>0</value>
      </greater-than>
		<less-than>
       <property>fdm/jsbsim/fcs/flap-pos-norm</property>
       <value>1</value>
      </less-than>
     </condition>
	    <volume>
	    <property>sim/sound/avionics/volume</property>
	    <factor>0.35</factor>
	    <offset>0</offset>
		<min>0</min>
		<max>1</max>
	   </volume>

</Flaps>
</fx>
</PropertyList>
